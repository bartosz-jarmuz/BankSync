<Window x:Class="BankSync.Windows.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSync.Windows"
        mc:Ignorable="d" Height="150" Width="300" 
        WindowStartupLocation="CenterOwner"
        Title="Input needed">
    <StackPanel>
        <TextBlock x:Name="Question" Margin="5" FontWeight="Bold" />
        <TextBox x:Name="ResponseTextBox" Margin="5" />
        <Button Content="OK" Click="OKButton_Click" Margin="5"/>
    </StackPanel>
</Window>
